---
import CTAButton from './CTAButton.astro';
---

<!-- Hero Section - Quick Launch USP -->
<section class="pt-32 pb-20 px-4 bg-black relative overflow-hidden">
    <!-- Background accent -->
    <div class="absolute top-0 right-0 w-96 h-96 bg-[#E50914] opacity-5 rounded-full blur-3xl"></div>
    
    <div class="max-w-7xl mx-auto relative z-10">
        <div class="text-center mb-16">
            <!-- 24-Hour Delivery Badge -->
            <div class="inline-block mb-8">
                <span class="bg-[#E50914] text-white px-8 py-3 rounded-full text-base md:text-lg font-black">
                    ⚡ Delivered in 24 Hours
                </span>
            </div>
            
            <!-- Main Heading -->
            <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold mb-6 text-white leading-tight">
                Get Your Professional Website<br/>
                <span class="text-white">Live in 24 Hours</span>
            </h1>
            
            <!-- Subheading -->
            <p class="text-lg md:text-2xl text-gray-300 mb-4 max-w-4xl mx-auto leading-relaxed">
                Join 10,000+ businesses with industry-specific websites for <span class="text-white font-bold">₹8,300. Forever.</span><br/>
                One-time payment includes lifetime hosting, SEO optimization, and annual updates.
            </p>
            
            <!-- Trust Microcopy -->
            <p class="text-sm md:text-base text-gray-400 mb-8 max-w-3xl mx-auto">
                100% satisfaction guaranteed • 30-day money-back guarantee • No hidden fees
            </p>
            
            <!-- CTA Buttons -->
            <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-4">
                <CTAButton variant="book-now" serviceType="Quick Launch Website" planType="Quick Launch" text="Start My Website" />
                <CTAButton variant="contact-us" text="See How It Works" />
            </div>
            
            <!-- CTA Microcopy -->
            <p class="text-xs md:text-sm text-gray-400 text-center">
                No credit card required • Free consultation • We respond within 2 hours
            </p>
        </div>
    </div>
</section>

