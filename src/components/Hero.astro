---
import CTAButton from './CTAButton.astro';
---

<!-- Hero Section - Quick Launch USP -->
<section class="pt-32 pb-20 px-4 bg-black relative overflow-hidden">
    <!-- Background accent -->
    <div class="absolute top-0 right-0 w-96 h-96 bg-[#E50914] opacity-5 rounded-full blur-3xl"></div>
    
    <div class="max-w-7xl mx-auto relative z-10">
        <div class="text-center mb-16">
            <!-- 24-Hour Delivery Badge -->
            <div class="inline-block mb-8">
                <span class="bg-[#E50914] text-white px-8 py-3 rounded-full text-base md:text-lg font-black">
                    ⚡ Delivered in 24 Hours
                </span>
            </div>
            
            <!-- Main Heading -->
            <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold mb-6 text-white leading-tight">
                10,000+ Professional Websites<br/>
                <span class="text-white">Delivered in 24 Hours</span>
            </h1>
            
            <!-- Subheading -->
            <p class="text-lg md:text-2xl text-gray-300 mb-12 max-w-4xl mx-auto leading-relaxed">
                Get your industry-specific website for <span class="text-white font-bold">₹8,300. Forever.</span><br/>
                One-time payment includes lifetime hosting, SEO optimization, and annual updates.
            </p>
            
            <!-- CTA Buttons -->
            <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
                <CTAButton variant="book-now" serviceType="Quick Launch Website" planType="Quick Launch" text="Book Now" />
                <CTAButton variant="contact-us" text="Contact Us" />
            </div>
        </div>
        
        <!-- Statistics -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8 max-w-5xl mx-auto mt-16 pt-16 border-t border-custom">
            <div class="text-center">
                <div class="text-4xl md:text-5xl font-bold text-white mb-2">10,000+</div>
                <div class="text-gray-400 text-sm md:text-base">Websites Delivered</div>
            </div>
            <div class="text-center">
                <div class="text-4xl md:text-5xl font-bold text-white mb-2">24hrs</div>
                <div class="text-gray-400 text-sm md:text-base">Delivery Time</div>
            </div>
            <div class="text-center">
                <div class="text-4xl md:text-5xl font-bold text-white mb-2">₹8,300</div>
                <div class="text-gray-400 text-sm md:text-base">One-Time Forever</div>
            </div>
            <div class="text-center">
                <div class="text-4xl md:text-5xl font-bold text-white mb-2">100%</div>
                <div class="text-gray-400 text-sm md:text-base">Satisfaction Rate</div>
            </div>
        </div>
    </div>
</section>

