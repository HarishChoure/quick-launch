---
// Booking Modal component
---

<!-- Booking Modal -->
<div id="bookingModal" class="modal-overlay">
    <div class="modal-content">
        <button class="modal-close" id="closeModal">&times;</button>
        <h2 id="modalTitle" class="text-3xl font-bold text-white mb-2 text-center">Book Your Website</h2>
        
        <!-- Step Indicator for Form -->
        <p id="stepIndicator" class="text-sm text-gray-400 text-center mb-2">Step 1 of 2</p>
        
        <!-- Reassurance Text -->
        <p class="text-xs md:text-sm text-gray-300 text-center mb-6">
            Your information is secure. We'll respond within 2 hours.
        </p>
        
        <!-- Form View -->
        <div id="formView">
            <form id="bookingForm" class="space-y-4">
                <div>
                    <label class="block mb-2 font-semibold text-white">Full Name *</label>
                    <input type="text" id="userName" name="name" placeholder="Enter your name" required
                        class="w-full px-4 py-3 rounded-lg border-2 border-custom bg-black text-white focus:outline-none focus:ring-2 focus:ring-[#E50914] focus:border-[#E50914] transition">
                </div>
                <div>
                    <label class="block mb-2 font-semibold text-white">Email *</label>
                    <input type="email" id="userEmail" name="email" placeholder="Enter your email" required
                        class="w-full px-4 py-3 rounded-lg border-2 border-custom bg-black text-white focus:outline-none focus:ring-2 focus:ring-[#E50914] focus:border-[#E50914] transition">
                </div>
                <div>
                    <label class="block mb-2 font-semibold text-white">Phone Number *</label>
                    <input type="tel" id="userPhone" name="phone" placeholder="Enter your phone number" required
                        class="w-full px-4 py-3 rounded-lg border-2 border-custom bg-black text-white focus:outline-none focus:ring-2 focus:ring-[#E50914] focus:border-[#E50914] transition">
                </div>
                <div>
                    <label class="block mb-2 font-semibold text-white">Selected Industry</label>
                    <input type="text" id="selectedCategory" name="category" readonly
                        class="w-full px-4 py-3 rounded-lg border-2 border-custom bg-gray-800 text-gray-400 cursor-not-allowed">
                </div>
                <div>
                    <label class="block mb-2 font-semibold text-white">Optional Message</label>
                    <textarea id="userMessage" name="message" rows="3" placeholder="Any additional details or requirements..."
                        class="w-full px-4 py-3 rounded-lg border-2 border-custom bg-black text-white focus:outline-none focus:ring-2 focus:ring-[#E50914] focus:border-[#E50914] transition resize-none"></textarea>
                </div>
                <button type="submit" class="w-full bg-[#E50914] text-white py-3 rounded-lg font-bold hover:bg-[#c40812] transition text-lg">
                    Continue to Contact Options
                </button>
            </form>
            <p class="text-xs text-gray-400 text-center mt-4">
                No spam. We respect your privacy.
            </p>
        </div>
        
        <!-- CTA Options View (hidden by default) -->
        <div id="ctaOptionsView" class="hidden space-y-4">
            <p class="text-sm text-gray-400 text-center mb-2">Step 2 of 2</p>
            <p class="text-gray-300 text-center mb-2 font-semibold">Choose how you'd like to proceed:</p>
            
            <!-- WhatsApp CTA (Prioritized) -->
            <div class="space-y-2">
                <a id="whatsappCTA" href="#" target="_blank" rel="noopener noreferrer" class="block w-full bg-[#25D366] text-white py-4 px-4 rounded-lg font-bold hover:bg-[#20BA5A] transition text-lg text-center shadow-lg">
                    ðŸ“± Continue on WhatsApp (Recommended)
                </a>
                <p class="text-xs text-gray-400 text-center">Get instant response â€¢ Average response: 2 minutes</p>
            </div>
            
            <!-- Email CTA -->
            <div class="space-y-2">
                <a id="emailCTA" href="#" class="block w-full bg-[#E50914] text-white py-4 px-4 rounded-lg font-bold hover:bg-[#c40812] transition text-lg text-center">
                    ðŸ“§ Send via Email
                </a>
                <p class="text-xs text-gray-400 text-center">We respond within 2 hours</p>
            </div>
            
            <button id="closeModalBtn" class="w-full border-2 border-white bg-transparent text-white py-4 rounded-lg font-bold hover:bg-white hover:text-[#E50914] transition text-lg">
                Close Modal
            </button>
            
            <p class="text-xs text-gray-400 text-center mt-4">
                We respond within 2 hours â€¢ 100% secure
            </p>
        </div>
    </div>
</div>

