---
// Hire Team Modal component
---

<!-- Hire Team Modal -->
<div id="hireTeamModal" class="modal-overlay">
    <div class="modal-content">
        <button class="modal-close" id="closeHireModal">&times;</button>
        <h2 id="hireModalTitle" class="text-3xl font-bold text-white mb-2 text-center">Hire a Team Member</h2>
        
        <!-- Step Indicator for Form -->
        <p id="hireStepIndicator" class="text-sm text-gray-400 text-center mb-2">Step 1 of 2</p>
        
        <!-- Reassurance Text -->
        <p class="text-xs md:text-sm text-gray-300 text-center mb-6">
            Your information is secure. We'll respond within 2 hours.
        </p>
        
        <!-- Form View -->
        <div id="hireFormView">
            <form id="hireTeamForm" class="space-y-4">
                <div>
                    <label class="block mb-2 font-semibold text-white">Full Name *</label>
                    <input type="text" id="hireUserName" name="name" placeholder="Enter your name" required
                        class="w-full px-4 py-3 rounded-lg border-2 border-custom bg-black text-white focus:outline-none focus:ring-2 focus:ring-[#E50914] focus:border-[#E50914] transition">
                </div>
                <div>
                    <label class="block mb-2 font-semibold text-white">Email *</label>
                    <input type="email" id="hireUserEmail" name="email" placeholder="Enter your email" required
                        class="w-full px-4 py-3 rounded-lg border-2 border-custom bg-black text-white focus:outline-none focus:ring-2 focus:ring-[#E50914] focus:border-[#E50914] transition">
                </div>
                <div>
                    <label class="block mb-2 font-semibold text-white">Phone Number *</label>
                    <input type="tel" id="hireUserPhone" name="phone" placeholder="Enter your phone number" required
                        class="w-full px-4 py-3 rounded-lg border-2 border-custom bg-black text-white focus:outline-none focus:ring-2 focus:ring-[#E50914] focus:border-[#E50914] transition">
                </div>
                <div>
                    <label class="block mb-2 font-semibold text-white">Selected Role</label>
                    <input type="text" id="selectedRole" name="role" readonly
                        class="w-full px-4 py-3 rounded-lg border-2 border-custom bg-gray-800 text-gray-400 cursor-not-allowed">
                </div>
                <div>
                    <label class="block mb-2 font-semibold text-white">Project Details / Requirements *</label>
                    <textarea id="hireProjectDetails" name="projectDetails" rows="4" placeholder="Describe your project, requirements, and what you need help with..." required
                        class="w-full px-4 py-3 rounded-lg border-2 border-custom bg-black text-white focus:outline-none focus:ring-2 focus:ring-[#E50914] focus:border-[#E50914] transition resize-none"></textarea>
                </div>
                <div>
                    <label class="block mb-2 font-semibold text-white">Hours Needed / Duration *</label>
                    <select id="hireDuration" name="duration" required
                        class="w-full px-4 py-3 rounded-lg border-2 border-custom bg-black text-white focus:outline-none focus:ring-2 focus:ring-[#E50914] focus:border-[#E50914] transition">
                        <option value="">Select duration</option>
                        <option value="part-time">Part-time (20-30 hrs/week)</option>
                        <option value="full-time">Full-time (40+ hrs/week)</option>
                        <option value="project-based">Project-based</option>
                        <option value="hourly">Hourly (flexible)</option>
                    </select>
                </div>
                <div>
                    <label class="block mb-2 font-semibold text-white">Budget Range</label>
                    <select id="hireBudget" name="budget"
                        class="w-full px-4 py-3 rounded-lg border-2 border-custom bg-black text-white focus:outline-none focus:ring-2 focus:ring-[#E50914] focus:border-[#E50914] transition">
                        <option value="">Select budget range (optional)</option>
                        <option value="under-50k">Under â‚¹50,000/month</option>
                        <option value="50k-1l">â‚¹50,000 - â‚¹1,00,000/month</option>
                        <option value="1l-2l">â‚¹1,00,000 - â‚¹2,00,000/month</option>
                        <option value="above-2l">Above â‚¹2,00,000/month</option>
                    </select>
                </div>
                <div>
                    <label class="block mb-2 font-semibold text-white">Optional Message</label>
                    <textarea id="hireUserMessage" name="message" rows="3" placeholder="Any additional information or questions..."
                        class="w-full px-4 py-3 rounded-lg border-2 border-custom bg-black text-white focus:outline-none focus:ring-2 focus:ring-[#E50914] focus:border-[#E50914] transition resize-none"></textarea>
                </div>
                <button type="submit" class="w-full bg-[#E50914] text-white py-3 rounded-lg font-bold hover:bg-[#c40812] transition text-lg">
                    Continue to Contact Options
                </button>
            </form>
            <p class="text-xs text-gray-400 text-center mt-4">
                No spam. We respect your privacy.
            </p>
        </div>
        
        <!-- CTA Options View (hidden by default) -->
        <div id="hireCtaOptionsView" class="hidden space-y-4">
            <p class="text-sm text-gray-400 text-center mb-2">Step 2 of 2</p>
            <p class="text-gray-300 text-center mb-2 font-semibold">Choose how you'd like to proceed:</p>
            
            <!-- WhatsApp CTA (Prioritized) -->
            <div class="space-y-2">
                <a id="hireWhatsappCTA" href="#" target="_blank" rel="noopener noreferrer" class="block w-full bg-[#25D366] text-white py-4 px-4 rounded-lg font-bold hover:bg-[#20BA5A] transition text-lg text-center shadow-lg">
                    ðŸ“± Continue on WhatsApp (Recommended)
                </a>
                <p class="text-xs text-gray-400 text-center">Get instant response â€¢ Average response: 2 minutes</p>
            </div>
            
            <!-- Email CTA -->
            <div class="space-y-2">
                <a id="hireEmailCTA" href="#" class="block w-full bg-[#E50914] text-white py-4 px-4 rounded-lg font-bold hover:bg-[#c40812] transition text-lg text-center">
                    ðŸ“§ Send via Email
                </a>
                <p class="text-xs text-gray-400 text-center">We respond within 2 hours</p>
            </div>
            
            <button id="closeHireModalBtn" class="w-full border-2 border-white bg-transparent text-white py-4 rounded-lg font-bold hover:bg-white hover:text-[#E50914] transition text-lg">
                Close Modal
            </button>
            
            <p class="text-xs text-gray-400 text-center mt-4">
                We respond within 2 hours â€¢ 100% secure
            </p>
        </div>
    </div>
</div>

