---
import { COMPANY_NAME } from '../constants/contact';
---

<nav id="navbar" class="fixed w-full z-50 bg-black border-b border-custom">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
            <div class="flex items-center gap-8">
                <a href="/" class="flex items-center gap-2">
                    <span class="starburst">‚≠ê</span>
                    <h1 class="text-2xl font-semibold text-white">{COMPANY_NAME}</h1>
                </a>
                <div class="hidden md:flex items-center gap-6">
                    <a href="/" class="text-white font-semibold hover:text-[#E50914] transition">Home</a>
                    <a href="/services" class="text-white hover:text-white transition">Services</a>
                    <a href="/mvp" class="text-white hover:text-white transition">MVP</a>
                    <div class="relative group">
                        <a href="/hire-developer" class="text-white hover:text-white transition">Hire Team</a>
                        <div class="hidden group-hover:block absolute top-full left-0 mt-2 w-56 bg-dark-custom border-2 border-white rounded-xl shadow-2xl z-50 overflow-hidden">
                            <a href="/hire-developer" class="block px-6 py-3 text-white hover:bg-[#E50914] transition border-b border-custom">Hire Developer</a>
                            <a href="/hire-digital-marketing" class="block px-6 py-3 text-white hover:bg-[#E50914] transition">Hire Digital Marketing</a>
                        </div>
                    </div>
                    <a href="/about" class="text-white hover:text-white transition">About</a>
                    <a href="/contact" class="text-white hover:text-white transition">Contact</a>
                </div>
            </div>
            <div class="flex items-center gap-4">
                <button id="mobileMenuBtn" class="md:hidden p-2 text-white">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                </button>
                <div class="hidden md:flex items-center gap-4">
                    <a href="/contact" class="bg-[#E50914] text-white px-6 py-2 rounded font-medium hover:bg-[#c40812]">Contact</a>
                </div>
            </div>
        </div>
        <!-- Mobile Menu -->
        <div id="mobileMenu" class="hidden md:hidden pb-4 border-t border-custom mt-4">
            <div class="flex flex-col gap-4 pt-4">
                <a href="/" class="text-white font-semibold hover:text-[#E50914] transition">Home</a>
                <a href="/services" class="text-white hover:text-white transition">Services</a>
                <a href="/mvp" class="text-white hover:text-white transition">MVP</a>
                <a href="/hire-developer" class="text-white hover:text-white transition">Hire Developer</a>
                <a href="/hire-digital-marketing" class="text-white hover:text-white transition">Hire Digital Marketing</a>
                <a href="/about" class="text-white hover:text-white transition">About</a>
                <a href="/contact" class="bg-[#E50914] text-white px-6 py-2 rounded font-medium hover:bg-[#c40812] text-center">Contact</a>
            </div>
        </div>
    </div>
</nav>

