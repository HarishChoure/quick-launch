---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Hero from '../components/Hero.astro';
import Industries from '../components/Industries.astro';
import Process from '../components/Process.astro';
import Footer from '../components/Footer.astro';
import CTAButton from '../components/CTAButton.astro';
import BookingModal from '../components/BookingModal.astro';
---

<Layout 
  title="Quick Launch - 10,000+ Professional Websites Delivered in 24 Hours | ₹8,300 One-Time"
  description="Get your industry-specific website for ₹8,300. One-time payment includes lifetime hosting, SEO optimization, and annual updates. Delivered in 24 hours."
>
    <Navigation />
    <Hero />
    
    <!-- Statistics Section -->
    <section class="py-16 px-4 bg-black border-t border-custom">
      <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8 max-w-5xl mx-auto mb-8">
          <div class="text-center">
            <div class="text-4xl md:text-5xl font-bold text-white mb-2">10,000+</div>
            <div class="text-gray-400 text-sm md:text-base">Websites Delivered</div>
          </div>
          <div class="text-center">
            <div class="text-4xl md:text-5xl font-bold text-white mb-2">24hrs</div>
            <div class="text-gray-400 text-sm md:text-base">Delivery Time</div>
          </div>
          <div class="text-center">
            <div class="text-4xl md:text-5xl font-bold text-white mb-2">₹8,300</div>
            <div class="text-gray-400 text-sm md:text-base">One-Time Forever</div>
          </div>
          <div class="text-center">
            <div class="text-4xl md:text-5xl font-bold text-white mb-2">100%</div>
            <div class="text-gray-400 text-sm md:text-base">Satisfaction Rate</div>
          </div>
        </div>
        
        <!-- Trust Microcopy -->
        <div class="text-center space-y-2 max-w-3xl mx-auto">
          <p class="text-sm md:text-base text-gray-300">
            Trusted by 10,000+ businesses across India
          </p>
          <p class="text-xs md:text-sm text-gray-400">
            Average response time: 2 hours • Money-back guarantee • No questions asked
          </p>
          <p class="text-xs md:text-sm text-gray-400">
            Join businesses like yours getting online in 24 hours
          </p>
        </div>
      </div>
    </section>
    
    <Industries />
    
    <!-- Quick Launch Card -->
    <section class="py-20 px-4 bg-black">
      <div class="max-w-7xl mx-auto">
        <div class="flex justify-center">
          <article class="p-8 bg-dark-custom border-2 border-white rounded-3xl relative max-w-md w-full">
            <div class="absolute -top-4 left-1/2 transform -translate-x-1/2 bg-[#E50914] text-white px-6 py-2 rounded-full text-xs font-black">
              ⚡ 24 HOURS
            </div>
            
            <div class="text-center mb-6 pt-4">
              <h2 class="text-2xl md:text-3xl font-bold text-white mb-2">Quick Launch</h2>
              <p class="text-gray-400 text-sm">Perfect for rapid deployment</p>
            </div>
            
            <div class="text-center mb-6">
              <div class="text-4xl md:text-5xl font-black text-white mb-2">₹8,300</div>
              <p class="text-gray-400 text-sm mb-2">one-time payment</p>
              <p class="text-xs text-gray-500 mb-3">Less than ₹700/month forever</p>
              <p class="text-xs text-gray-400 mb-4">One-time payment • No hidden fees • Cancel anytime</p>
              <p class="text-xs text-[#E50914] font-semibold mb-2">30-day money-back guarantee</p>
              <p class="text-xs text-gray-400">Limited spots available this week</p>
            </div>
            
            <ul class="space-y-3 mb-8 text-sm">
              <li class="flex items-start gap-2">
                <span class="text-white text-lg">✓</span>
                <span class="text-gray-300">Industry-specific design</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-white text-lg">✓</span>
                <span class="text-gray-300">SEO optimization</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-white text-lg">✓</span>
                <span class="text-gray-300">12 content updates/year</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-white text-lg">✓</span>
                <span class="text-gray-300">Monthly reports</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-white text-lg">✓</span>
                <span class="text-gray-300">SSL certificate</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-white text-lg">✓</span>
                <span class="text-gray-300">Lifetime hosting</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-white text-lg">✓</span>
                <span class="text-gray-300">Free subdomain</span>
              </li>
            </ul>
            
            <div class="space-y-3">
              <button 
                data-open-modal 
                data-category="Quick Launch"
                class="w-full inline-flex items-center justify-center px-8 py-4 md:px-10 md:py-5 text-base md:text-lg rounded-xl font-semibold text-center transition-all duration-200 ease-out min-h-[48px] md:min-h-[56px] bg-[#E50914] text-white hover:bg-[#c40812] active:scale-[0.97]"
              >
                Get My Website in 24 Hours
              </button>
              <CTAButton variant="contact-us" text="Contact Us" className="w-full" />
              <p class="text-xs text-center text-gray-400 mt-2">
                Join 10,000+ satisfied customers • 100% satisfaction guaranteed
              </p>
            </div>
          </article>
        </div>
      </div>
    </section>
    
    <Process />
    <Footer />
    <BookingModal />
    
    <!-- Mobile-Only Sticky CTA Bar -->
    <div class="fixed bottom-0 left-0 right-0 bg-black border-t-2 border-[#E50914] p-4 z-50 md:hidden shadow-2xl">
      <div class="max-w-md mx-auto">
        <button 
          data-open-modal 
          data-category="Quick Launch"
          class="w-full bg-[#E50914] text-white py-4 px-6 rounded-xl font-bold text-lg hover:bg-[#c40812] transition active:scale-[0.98]"
        >
          Get Your Website in 24 Hours
        </button>
        <p class="text-xs text-gray-400 text-center mt-2">
          ₹8,300 one-time • No credit card needed
        </p>
      </div>
    </div>
</Layout>

